
{
    "files.exclude": {
        "**/bazel-*": true,
        "**/.bazel-bin": true,
        ".mypy_cache": true,
        "**/.venv": true,
        ".out": true,
        "**/.ruff_cache": true,
        "**/.mypy_cache": true,
    },
    "symlink-follow.autoFollow": true,
    "makefile.configureOnOpen": false,

    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

    "go.goroot": "${workspaceFolder}/bazel-bin/go_tools",
    "go.gopath": "${workspaceFolder}/bazel-bin/go_tools/bin/go",
    "go.toolsGopath": "${workspaceFolder}/bazel-bin/go_tools/bin",
    "go.terminal.activateEnvironment": true,
    "go.delveConfig": {
        "debugAdapter": "dlv-dap",
    }
} 
